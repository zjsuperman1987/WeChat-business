page {
  height: 100%;
  display: flex;
  flex-direction: column;
}

x-scroll-view {
  height: calc(100% - 80px)
}

.view {
  height: 100px;
  line-height: 100px;
  text-align: center;
}


.home-top {
  width: 100%;
  height: 406rpx;
  padding: 20rpx 40rpx 0;
  background-image: url(http://a1.qpic.cn/psb?/V12oEYDD0Tk57U/**tXqoqDEQo1hqRKLQLUtvMPvqQ3zVGCO7WgVBxxeEI!/m/dMQAAAAAAAAAnull&bo=7gKqAQAAAAARB3c!&rf=photolist&t=5);
  background-repeat: no-repeat;
  background-size: 100% 100%;
  box-sizing: border-box;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
}

.mui-top {
  display: flex;
  flex-direction: row;
  height: 70rpx;
  width: 100%;
}
.search-bar {
  width: 480rpx;
  height: 100%;
  margin-right: 40rpx;  
  background: gold;
}

.scan {
  display: flex;
  flex-direction: column;
  width: 84rpx;
  height: 100%;
  margin-right: 30rpx;
}
.scan icon {
  width: 41rpx;
  height: 41rpx;
  margin: 0 auto;
  background: url(http://a4.qpic.cn/psb?/V12oEYDD0Tk57U/7kc6xujflAcskoONK9hCdu1bw1t7aiNCvI0fkaED5TM!/m/dL8AAAAAAAAAnull&bo=KQApAAAAAAADByI!&rf=photolist&t=5) no-repeat;
  background-size: 100% 100%;
}


.sign {
  display: flex;
  flex-direction: column;
  width: 84rpx;
  height: 100%;
}

.sign icon {
  width: 41rpx;
  height: 41rpx;
  margin: 0 auto;
  background: url(http://a1.qpic.cn/psb?/V12oEYDD0Tk57U/p6vIEzPSAhtdq3gvNgl07lbPLPelYEy8zZaHWSRUY00!/m/dMQAAAAAAAAAnull&bo=JwAqAAAAAAADBy8!&rf=photolist&t=5) no-repeat;
  background-size: 100% 100%;
}